<%= form_for @pet, html: { class: 'form-horizontal' } do |f| %>
  <% if @pet.errors.any? %>
    <div class="accordion alert alert-error" id="accordionErrors">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionErrors" href="#ErrorsList">
            See errors below
          </a>
        </div>
        <div id="ErrorsList" class="accordion-body collapse out">
          <div class="accordion-inner">
            <!--<h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>-->

            <ul>
            <% @pet.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
      <!--<div id="error_explanation">
        <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

        <ul>
        <% @pet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>-->
    </div>
  <% end %>

  <div class="control-group <%= "error" if @pet.errors.get(:name) %>">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls"><%= f.text_field :name, placeholder: 'Name' %></div>
  </div>
  <div class="control-group <%= "error" if @pet.errors.get(:owner) %>">
    <%= f.label :owner, class: 'control-label' %>
    <div class="controls"><%= f.text_field :owner, placeholder: 'Owner' %></div>
  </div>
  <div class="control-group <%= "error" if @pet.errors.get(:age) %>">
    <%= f.label :age, class: 'control-label' %>
    <div class="controls"><%= f.text_field :age, placeholder: 'Age' %></div>
  </div>
  <div class="control-group">
    <%= f.label :address, class: 'control-label' %>
    <div class="controls"><%= f.text_field :address, placeholder: 'Address' %></div>
  </div>
  <div class="control-group">
    <%= f.label :birthdate, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :birthdate, class: 'input-append' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save Pet', class: 'btn btn-primary' %>
    <%= link_to 'Back', pets_path, class: 'btn' %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.input-append').datepicker({
      format: 'yyyy-mm-dd'
    });
  });
</script>
